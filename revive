#!/bin/sh
# Author: Shree Raj Shrestha
# Date: 01/28/2025
set -ueox pipefail
source ./rake "${1}"

DEBUG_POD=$(podman container ps -a --filter "name=${WHICH_POD}" --format '{{.ID}}')
podman commit "${DEBUG_POD}" "${WHICH_POD}"
podman container stop "${WHICH_POD}" && true
podman container rm --force "${WHICH_POD}"
podman run -d --name "${WHICH_POD}" -v "${HUSK_HOME}":"${SOIL_HOME}":z -t "${WHICH_POD}" /bin/bash
