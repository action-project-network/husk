STEPS=(
    "./configure"
    "cd ./src/clib"
    "cp Make.mach.linux-gnu Make.mach.fedora"
    "echo 'MACH_INCLUDES = -I${SOIL_HOME}/${COB_HOME}/${WHICH_POD}/hdf5/include' >> Make.mach.fedora"
    "echo 'MACH_LIBS = -L${SOIL_HOME}/${COB_HOME}/${WHICH_POD}/hdf5/lib -lgfortran' >> Make.mach.fedora"
    "echo 'MACH_INSTALL_PREFIX = ${SOIL_HOME}/${COB_HOME}/${WHICH_POD}/grackle' >> Make.mach.fedora"
    "mkdir -p ${SOIL_HOME}/${COB_HOME}/${WHICH_POD}/grackle"
    "make clean"
    "make machine-fedora"
    "make"
    "mkdir -p ${SOIL_HOME}/${COB_HOME}/${WHICH_POD}"
    "make install"
)
NEEDS=(
    hdf5_1.14.5_standalone
)